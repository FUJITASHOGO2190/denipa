<%= render "shared/header" %>


<%= form_with model: @post, class: 'post-main', id: 'new_post',  local: true do |f|%>
<div class='post-form-wrap'>
        <div class='post-form-header'>
          <h1 class='post-form-header-text'>
            投稿する
          </h1>
        </div>

        <div class="post-form-group">
          <div class='post-form-text-wrap'>
            <label class="post-form-text">ブランド</label>
            <span class="post-indispensable">必須</span>
          </div>
          <%= f.collection_select(:brand_id, Brand.all, :id, :name, {}, {class:"post-input-default"}) %>
        </div>
        
      <div class="post-form-group">
        <div class='post-form-text-wrap'>
          <label class="post-form-text">洗濯頻度</label>
          <span class="post-indispensable">必須</span>
        </div>
        <%= f.text_field :washing_frequency,class:"post-input-default" %>
      </div>
    
      <div class="post-form-group">
        <div class='post-form-text-wrap'>
          <label class="post-form-text">着用年数</label>
          <span class="post-indispensable">必須</span>
        </div>
        <%= f.text_field :wearing_years, class:"post-input-default" %>
      </div>
    
      <div class="post-form-group">
        <div class='post-form-text-wrap'>
          <label class="post-form-text">購入した店、思い入れなど</label>
          <span class="post-indispensable">必須</span>
        </div>
        <%= f.text_area :content, class:"post-text-default", rows: 10 %>
      </div>
    
      <div class="post-form-group">
          <div class='post-form-text-wrap'>
            <label class="post-form-text">写真を選択する</label>
            <span class="post-indispensable">必須</span>
          </div>
          <div class='post-form-images-wrap'> 
            <div id="previews" ></div>        
              <div class="click-upload">    
                <%= f.file_field :images, name: 'post[images][]', data: {index: 0} %>
              </div>
          </div>    
      </div>
      <div class='post-btn'>
        <%= f.submit "保存する", class:"post-blue-btn"  %>
      </div>
      <div class="foot-margin"></div>
</div>
<% end %>
